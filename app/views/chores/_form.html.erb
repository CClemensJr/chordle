<%= form_with(model: chore, local: true) do |form| %>
  <% if chore.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(chore.errors.count, "error") %> prohibited this chore from being saved:</h2>

      <ul>
      <% chore.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :chore_title %>
  </div>

  <div class="field">
    <%= form.label :details %>
    <%= form.text_area :details, id: :chore_details %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, ['High', 'Medium', 'Low'], id: :chore_priority %>
  </div>

  <div class="field">
    <%= form.label :time_to_complete %>
    <%= form.select :time_to_complete, [5, 10, 15, 20, 30, 45, 60, 90, 120], id: :chore_time_to_complete %> minutes
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
